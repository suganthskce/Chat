    .card {
        padding: 10px 0 10px 0;
    }

    .input-group {
    	position: absolute;
        height: 8%;
    	bottom: 0;
    }

    .btn {
        height:100%;
    }

    .input-username{
        height: 10%;
    }
  </style>

  <body>

    <div class="container-flude">
        <div class="input-username">
                <textarea id="username" class="form-control" rows="1" placeholder="Username"></textarea>
                <button id = "send_username" class="btn btn-secondary" type="button">send</button>
        </div>
                <div id = "chatroom" class="msg-group center">                     
                </div>
